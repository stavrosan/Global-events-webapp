{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block stylesheets %}
   
{% endblock %}

{% block body %}
<div class="hero">
   <h1 class="text-center text-white p-5">Welcome to Global Events</h1>
   <h5 class="text-center text-white p-1">The official travel guide for events arount the world</h5>
</div>


   <div class="container">
     <h1 class="text-center m-4">Events</h1>
     <a class="btn btn-success my-2" href="{{ path('app_events_new') }}">Create new event</a>
      <div class="row row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
     
        {% for event in events %}
           
    <div class='col md-4 p-2'>
        <div class='card1 h-100'>
             <img src={{ event.picture }} class='card-img-top object-fit-cover' style='height:15rem;' alt={{ event.name }}>
            <div class='card-body'>
              <h5 class='card-title fw-bold'>{{ event.name }}</h5>
              <p class='card-text'>{{ event.date ? event.date|date('Y-m-d H:i') : '' }}</p>
              <p class='card-text'>{{ event.address }}</p>
              <a class="btn btn-info" href="{{ path('app_events_show', {'id': event.id}) }}">Show details</a>
              <a class="btn btn-warning" href="{{ path('app_events_edit', {'id': event.id}) }}">Edit</a>
              <a class="btn btn-dark m-1" href="{{ path('app_events_index', {'type': event.type }) }}">Event Type</a>{# When you press the button it shows event type in the url #}
            </div>
        </div>
    </div>
             
        {% else %}
        
                <p>no records found</p>
            
        {% endfor %}
        </div>
    </div>

    
{% endblock %}
